<header>
  <div class="header-logo">
    <%= link_to "OsanpoApp", "/"%>
  </div>
  <ul class="header-menus">
    <% if end_user_signed_in? %>
      <li>
        <%= link_to "マイページ", end_user_path(current_end_user)%>
      </li>
      <li>
        <%= link_to "投稿一覧", "/posts"%>
      </li>
      <li>
        <%= link_to "新規投稿", "/posts/new"%>
      </li>
      <li>
        <%= link_to "ログアウト", destroy_end_user_session_path, method: :delete %>
      </li>
    <% else %>
      <li>
        <%= link_to "OsanpoAppとは", "/about"%>
      </li>
      <li>
        <%= link_to "新規登録", new_end_user_registration_path %>
      </li>
      <li>
        <%= link_to "ログイン", new_end_user_session_path %>
      </li>
      <li>
        <%= link_to 'ゲストログイン（閲覧用）', public_guest_sign_in_path, class: "btn btn-secondary btn-sm btn-block mb-3 sign_in", method: :post %>
      </li>
    <% end %>
  </ul>
</header>