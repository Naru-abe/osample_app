<div class="main posts-index">
  <div class="container">
    <% @posts.each do |post| %>
      <div class="posts-index-item">
        <% if post.image.attached? %>
          <%= image_tag post.image, size: "200x200" %>
        <% else %>
          <%= image_tag 'default-image', size: "200x200" %>
        <% end %>
        <%= link_to post.content, post_path(post.id) %>
      </div>
    <% end %>
  </div>
</div>
