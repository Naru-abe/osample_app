<div class="main posts-show">
  <div class="container">
    <div class="posts-show-item">
        <div class="post-image">
            <% if @post.image.attached? %>
              <%= image_tag @post.image, size: "200x200" %>
            <% else %>
              <%= image_tag 'default-image', size: "200x200" %>
            <% end %>
        </div>
        <p>
            <%= @post.content %>
        </p>
        <div class="post-time">
            <%= @post.created_at %>
        </div>
        <div class="post-menus">
          <% if @post.end_user == current_end_user %>
            <a>
                <%= link_to "編集する", edit_post_path(@post), class: "buttom" %>
            </a>
            <a>
                <%= link_to "削除する", @post, method: :delete, data: { confirm: '本当に消しますか？' }, class: "buttom" %>
            </a>
          <% end %>
        </div>
    </div>
  </div>
</div>